{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table" border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>NomSession</th>
                <td>{{ session.nomSession }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ session.jour }}</td>
            </tr>
            <tr>
                <th>HeureDebut</th>
                <td>{{ session.heureDebut ? session.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HeureFin</th>
                <td>{{ session.heureFin ? session.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbParticipant</th>
                <td>{{ session.nbParticipant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}">back to list</a>

    <a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
